<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree/List para Métodos -->
    <record id="view_instrument_method_tree" model="ir.ui.view">
        <field name="name">instrument.method.tree</field>
        <field name="model">instrument.method</field>
        <field name="arch" type="xml">
            <list string="Métodos de Proceso" sample="1">
                <field name="name"/>
                <field name="tipo" decoration-info="tipo == 'lavado'" 
                       decoration-warning="tipo == 'esterilizacion'"
                       widget="badge"/>
                <field name="temperatura_min"/>
                <field name="temperatura_max"/>
                <field name="tiempo_proceso"/>
                <field name="requiere_secado" widget="boolean_toggle"/>
                <field name="tipo_ciclo" invisible="tipo != 'esterilizacion'"/>
                <field name="tipo_carga" invisible="tipo != 'esterilizacion'"/>
                <!-- MEJORA BACKLOG: Mostrar configuración de biológicos -->
                <field name="requiere_biologico" widget="boolean_toggle" invisible="tipo != 'esterilizacion'"/>
                <field name="tipo_biologico" invisible="tipo != 'esterilizacion'"/>
                <field name="frecuencia_biologico" invisible="tipo != 'esterilizacion'"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario para Métodos -->
    <record id="view_instrument_method_form" model="ir.ui.view">
        <field name="name">instrument.method.form</field>
        <field name="model">instrument.method</field>
        <field name="arch" type="xml">
            <form string="Método de Proceso">
                <sheet>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del método..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tipo" required="1"/>
                            <field name="active" invisible="1"/>
                            <field name="requiere_secado" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="temperatura_min"/>
                            <field name="temperatura_max"/>
                            <field name="tiempo_proceso"/>
                        </group>
                    </group>
                    <group invisible="tipo != 'esterilizacion'">
                        <group>
                            <field name="tipo_ciclo"/>
                        </group>
                        <group>
                            <field name="tipo_carga"/>
                        </group>
                    </group>
                    
                    <!-- ============================================================================ -->
                    <!-- MEJORA BACKLOG: Configuración de biológicos por tecnología -->
                    <!-- ============================================================================ -->
                    <group string="🧪 Configuración de Indicadores Biológicos" invisible="tipo != 'esterilizacion'">
                        <group>
                            <field name="requiere_biologico" widget="boolean_toggle"/>
                            <field name="tipo_biologico" attrs="{'invisible': [('requiere_biologico', '=', False)]}"/>
                            <field name="frecuencia_biologico" attrs="{'invisible': [('requiere_biologico', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="tiempo_incubacion_biologico" attrs="{'invisible': [('requiere_biologico', '=', False)]}"/>
                            <field name="temperatura_incubacion_biologico" attrs="{'invisible': [('requiere_biologico', '=', False)]}"/>
                        </group>
                        <group string="Observaciones del Biológico" attrs="{'invisible': [('requiere_biologico', '=', False)]}">
                            <field name="observaciones_biologico" nolabel="1" placeholder="Instrucciones específicas para el manejo del indicador biológico..."/>
                        </group>
                    </group>
                    
                    <group string="Descripción">
                        <field name="descripcion" nolabel="1" placeholder="Descripción detallada del método..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search para Métodos -->
    <record id="view_instrument_method_search" model="ir.ui.view">
        <field name="name">instrument.method.search</field>
        <field name="model">instrument.method</field>
        <field name="arch" type="xml">
            <search string="Buscar Métodos">
                <field name="name" string="Nombre"/>
                <field name="tipo" string="Tipo"/>
                <field name="descripcion" string="Descripción"/>
                
                <separator/>
                <filter name="filter_active" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactivos" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter name="filter_lavado" string="Lavado" domain="[('tipo', '=', 'lavado')]"/>
                <filter name="filter_esterilizacion" string="Esterilización" domain="[('tipo', '=', 'esterilizacion')]"/>
                
                <separator/>
                <filter name="filter_secado" string="Requiere Secado" domain="[('requiere_secado', '=', True)]"/>
                
                <group expand="1" string="Group By">
                    <filter name="group_tipo" string="Tipo" context="{'group_by': 'tipo'}"/>
                    <filter name="group_secado" string="Requiere Secado" context="{'group_by': 'requiere_secado'}"/>
                    <filter name="group_active" string="Estado" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban para Métodos -->
    <record id="view_instrument_method_kanban" model="ir.ui.view">
        <field name="name">instrument.method.kanban</field>
        <field name="model">instrument.method</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="tipo"/>
                <field name="temperatura_min"/>
                <field name="temperatura_max"/>
                <field name="tiempo_proceso"/>
                <field name="requiere_secado"/>
                <field name="uso_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="tipo" widget="label_selection" options="{'classes': {'lavado': 'info', 'esterilizacion': 'warning'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.temperatura_min.raw_value or record.temperatura_max.raw_value">
                                    <i class="fa fa-thermometer-half" title="Temperatura"/> 
                                    <span t-if="record.temperatura_min.raw_value"><field name="temperatura_min"/>°C</span>
                                    <span t-if="record.temperatura_min.raw_value and record.temperatura_max.raw_value"> - </span>
                                    <span t-if="record.temperatura_max.raw_value"><field name="temperatura_max"/>°C</span>
                                </div>
                                <div t-if="record.tiempo_proceso.raw_value">
                                    <i class="fa fa-clock-o" title="Tiempo"/> <field name="tiempo_proceso"/> min
                                </div>
                                <div t-if="record.requiere_secado.raw_value">
                                    <i class="fa fa-wind" title="Requiere Secado"/> Requiere Secado
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span><field name="uso_count"/> usos</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción para Métodos -->
    <record id="action_instrument_method" model="ir.actions.act_window">
        <field name="name">Métodos de Proceso</field>
        <field name="res_model">instrument.method</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_instrument_method_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo método de proceso
            </p>
            <p>
                Configure los métodos de lavado y esterilización disponibles.
            </p>
        </field>
    </record>

</odoo> 